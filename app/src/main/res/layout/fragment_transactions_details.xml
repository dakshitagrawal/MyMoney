<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transactions_detail_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shyam.mymoney.TransactionsDetailsFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/reasonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            tools:padding="20dp"
            android:ems="10"
            android:hint="Reason"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/reason_icon"
            android:drawablePadding="10dp"
           />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        >

        <EditText
            android:id="@+id/amountSpentEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginTop="80dp"
            tools:padding="20dp"
            android:ems="10"
            android:hint="Amount Spent"
            android:drawableLeft="@drawable/amount_spent_icon"
            android:drawablePadding="10dp"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
       >

        <EditText
            android:id="@+id/dateEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            tools:padding="20dp"
            android:inputType="textAutoComplete"
            android:ems="10"
            android:hint="Date"
            android:focusable="false"
            android:drawableLeft="@drawable/date_icon"
            android:drawablePadding="10dp"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <EditText
            android:id="@+id/categoryEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            tools:padding="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Category"
            android:focusable="false"
            android:drawableLeft="@drawable/category_icon"
            android:drawablePadding="10dp"
            />
    </android.support.design.widget.TextInputLayout>


    <Switch
        android:id="@+id/moreExpenditureDetailsSwitch"
        android:text="More"
        android:textSize="20sp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/recieptTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/recieptEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            tools:padding="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Reciept"
            android:drawableLeft="@drawable/reciept_icon"
            android:drawablePadding="10dp"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/locationTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/locationEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            tools:padding="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Location"
            android:drawableLeft="@drawable/location_icon"
            android:drawablePadding="10dp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addNoteTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/addNoteEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            tools:padding="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Add Note"
            android:drawableLeft="@drawable/add_note_icon"
            android:drawablePadding="10dp"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveExpenditureDetailsButton"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
